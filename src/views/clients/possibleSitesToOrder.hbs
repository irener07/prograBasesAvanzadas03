<div class="row">
    <div class="card">
        <div class="card-header">
            <h1>Possible Sites to Order</h1> 
        </div>
        <div class="card-body">
            <form action="/clients/possibleSitesToOrder" method='POST'> 
                <div class="form-group">
                    <label>Select Supermarket</label>
                </div>
                <div class="form-group">
                    <select name ="selectedSuperMarket" id="selectedSuperMarket">
                        {{#each superMarkets}}
                        <option value="{{idSuperMarket}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    Select a Type: 
                    <select name ="selectedTypes" id ="selectedTypes" multiple="multiple">
                        <option value="restaurant">Restaurants</option>
                        <option value="movie_theater">Movies</option>
                        <option value="doctor">Doctors</option>
                        <option value="museum">Museums</option>
                        <option value="bar">Bars</option>      
                    </select>   </br> 
                </div>
                <div class="form-group">
                    <label>Radius:</label>
                </div>
                <div class="form-group">
                    <input type="number" min="0" step="1" name="selectedRadius">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">
                        Search
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


<div class="row">

    <div class="card-header">
        <h1>Sites Data</h1> 
    </div>
<table class="egt table {
    border-collapse: separate;
    border-spacing: 5px;
    background: #000 url("gradient.gif") bottom left repeat-x;
    color: #fff;
 }">  
    <tr>
    <th>Image</th>
    <th>Name</th>
    <th>Place ID</th>
    <th>International Phone Number</th>
    <th>Rating</th>
    <th>Schedule</th>
    <th>Website</th>
    </tr>
    {{#each nearByResults}}
    <tr>
        <td><img src={{PhotoUrl}}></td>
        <td>{{name}}</td>
        <td>{{placeid}}</td>
        <td>{{international_phone_number}}</td>
        <td>{{rating}}</td>
        <td>{{weekday_text}}</td>
        <td>{{website}}</td>
            <td>
      <form action="/clients/possibleSitesToOrder/registerSite/{{placeid}}" method="POST">
        <button class="btn btn-success btn-block btn-sm" type="submit">
          Add Site
        </button> 
      </form>
    </td>
    </tr>
    {{/each}}
</table>

</div>