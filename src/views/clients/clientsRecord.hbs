<div class="row">
    <div class="card">
        <div class="card-header">
            <h1>Clients Record</h1> 
        </div>
        <div class="card-body">
                <form action="/clients/clientsRecord" method='POST'> 
                    <div class="form-group">
                        <label>Clients ID</label> 
                    </div>
                    <div class="form-group">
                        <input type="text" name="clientId" id="clientId">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">
                        Search
                        </button>
                    </div>
                </form>
        </div>
    </div>
</div>

<br>
<br>

{{#if totalPurchases}}
<div class="row">
    <div class="card-header">
        <h1>Total Purchases:</h1> 
        <h3>{{totalPurchases}}</h3>
    </div>
</div>
{{/if}}

<br>
<br><br>

<table class="egt table {
    border-collapse: separate;
    border-spacing: 5px;
    background: #000 url("gradient.gif") bottom left repeat-x;
    color: #fff;
 }">
   
  <tr>
    <th scope="row">Date</th>
    <th>Particular Needs</th>
    <th>Total Amount</th>
  </tr>
  
    {{#each ordersRequests}}

  <tr>
    <th>{{dateTime}}</th>
    <td>{{particularNeeds}}</td>
    <td>{{totalAmount}}</td>
  </tr>
    {{/each}}
    </table>
</div> 