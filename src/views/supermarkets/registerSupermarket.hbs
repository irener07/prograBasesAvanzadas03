<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Register Supermarket</h3>
        </div>
        <div class="card-body">
            <form action="/supermarkets/registerSupermarket/{{supermarketsFound.placeid}}" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="idSuperMarket" placeholder="ID Supermarket" readonly="readonly" value="{{supermarketsFound.placeid}}" >
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Name" readonly="readonly" value="{{supermarketsFound.name}}" >
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="description" placeholder="Description">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="address" style='height:auto;:auto' placeholder="Address" readonly="readonly" value="{{supermarketsFound.formatted_address}}">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="latitude" id="latitude" placeholder="Latitude" readonly="readonly" value="{{supermarketsFound.lat}}">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="longitude" placeholder="Longitude" readonly="readonly" value="{{supermarketsFound.lng}}">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="typeSupermarket" placeholder="typeSupermarket" readonly="readonly" value="{{supermarketsFound.typeSupermarket}}">
                    </div>
                    <div class="form-group">
                        <input name="image" class="form-control" style='visibility:hidden' readonly="readonly" value="{{supermarketsFound.PhotoUrl}}">
                        <img  class="form-control" src={{supermarketsFound.PhotoUrl}} style='height:auto;:auto' >
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="telephone" placeholder="Telephone" readonly="readonly" value="{{supermarketsFound.international_phone_number}}">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="rating" placeholder="Rating" readonly="readonly" value="{{supermarketsFound.rating}}">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="schedule" placeholder="Schedule" readonly="readonly" value="{{supermarketsFound.weekday_text}}">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="website" placeholder="Web Site" readonly="readonly" value="{{supermarketsFound.website}}">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">
                            Save
                        </button>
                    </div>
            </form>
        </div>
    </div>
</div>