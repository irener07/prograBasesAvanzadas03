<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
               <h1>Add Produts in Supermarket</h1> 
            </div>
            <div class="card-body">
                <form action="/supermarkets/registerProducts/{{idM}}" method='POST'>
                    <div class="form-group">
                        <label>ID Product</label>
                        <input type="number" class="form-control" name="idProduct" placeholder="ID Product" value='{{idProduct}}'>
                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" name="name" placeholder="Name" value='{{name}}'>
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <input type="text" class="form-control" name="description" placeholder="Description" value='{{description}}'>
                    </div>
                    <div class="form-group">
                        <label>Price</label>
                        <input type="number" class="form-control" name="price" placeholder="Price" value='{{price}}'>
                    </div>
                    <div class="form-group">
                        <input type="file" class="form-control" name="fileImage" id="fileImage" accept="image/*" onchange="loadFile(event)">
                    </div>
                    <div class="form-group">
                        <input name="imageProduct" id="imageProduct" style='visibility:hidden' class="form-control" readonly="readonly">
                        <img name="imageProduct01" id="imageProduct01" class="form-control" style="height:auto;:auto">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">
                            Register Product
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
var loadFile = function (event) {
    var image = document.getElementById('imageProduct01');
    image.src = URL.createObjectURL(event.target.files[0]);
    var image01 = document.getElementById('imageProduct');
    image01.value = (event.target.files[0].name);
    };
</script>
